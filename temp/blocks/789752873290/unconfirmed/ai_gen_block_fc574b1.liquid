{% doc %}
  @prompt
    necesito un block de breadcrumbs que haga el home, colelction, y nombre producto
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumbs-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-breadcrumbs-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: {{ block.settings.spacing }}px;
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-breadcrumbs-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-breadcrumbs-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    user-select: none;
  }

  .ai-breadcrumbs-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumbs-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-breadcrumbs-nav-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-breadcrumbs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <nav class="ai-breadcrumbs-nav-{{ ai_gen_id }}" aria-label="Breadcrumb">
    <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
      <a href="/" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
        {{ block.settings.home_text }}
      </a>
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
        {{ block.settings.separator }}
      </span>
    </div>

    {% if product %}
      {% if product.collections.size > 0 %}
        {% assign collection = product.collections.first %}
        <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <a href="{{ collection.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
            {{ collection.title }}
          </a>
          <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
            {{ block.settings.separator }}
          </span>
        </div>
      {% endif %}

      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
          {{ product.title }}
        </span>
      </div>
    {% elsif collection %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
          {{ collection.title }}
        </span>
      </div>
    {% endif %}
  </nav>
</div>

{% schema %}
{
  "name": "Breadcrumbs",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Home text",
      "default": "Inicio"
    },
    {
      "type": "text",
      "id": "separator",
      "label": "Separator",
      "default": "/"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "spacing",
      "label": "Spacing",
      "min": 4,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "current_color",
      "label": "Current page color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#999999"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}
